<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
	<link rel="stylesheet" href="/styles.css">   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    {{!-- Navigation links --}}
    
	<nav>
        <h4>Node MySQL Login</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/register">Register</a></li>
			{{#if sessionUser}}
				<li><a href="/logout/">Logout</a></li>
			{{else}}
				<li><a href="/login">Login</a></li>
			{{/if}}
        </ul>
    </nav>
	
    {{!-- Body --}}
	
	{{#if sessionUser}}	
		<div class="container mt-4">
			<div class="mt-4 p-3 bg-success text-white rounded">
				<marquee direction="right"><h2 class="mb-0">Hello {{sessionUser}}!</h2></marquee>
			</div>
		</div>
	{{/if}}
	
	<div class="container mt-4">
        <div class="card mx-auto" style="width: 18rem;">            
            <div class="card-header">Login Form</div>    
            <div class="card-body">
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="username-reg" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username-reg" name="username">                        
                    </div>
                    <div class="mb-3">
                        <label for="password-reg" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password-reg" name="password">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
	
	{{#if message}}
		<h4 class="alert alert-danger mt-4">{{message}}</h4>
	{{/if}}
	
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>